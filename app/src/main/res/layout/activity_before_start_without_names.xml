<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_start_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.projectgroup.taboo.BeforeStartWithoutNames">

    <include layout="@layout/activity_team_scores" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/BeforeStart_nowPlays"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/text$_now_plays"
                android:gravity="center"
                android:layout_marginTop="250dp"
                />

            <TextView
                android:id="@+id/next_team_to_play"
                style="@style/StartGame_next_player"
                android:background="@color/TeamNamesActivity_blue_team_background"
                android:hint="@string/blue_team" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
