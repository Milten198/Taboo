<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <LinearLayout style="@style/BeforeStart_mainLayout">

            <LinearLayout style="@style/BeforeStart_teamLayouts">

                <TextView android:id="@+id/BeforeStart_blueLabel"
                    style="@style/BeforeStart_textViews"
                    android:text="Niebiescy"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_blue"
                    style="@style/BeforeStart_recyclerView" />


            </LinearLayout>

            <LinearLayout style="@style/BeforeStart_teamLayouts">

                <TextView android:id="@+id/BeforeStart_redLabel"
                    style="@style/BeforeStart_textViews"
                    android:text="Czerwoni"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_red"
                    style="@style/BeforeStart_recyclerView" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/first_player"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/BeforeStart_nowPlays"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/text$_now_plays"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/variable$_nowPlays"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/score_to_win"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/text$_points_limit_to_win"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/score_limit"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/value$_points_limit_to_win"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_to_change_players"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="bottom">

            <Button
                android:id="@+id/button$_start_game"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/click_to_start_game"
                android:textAlignment="center"
                android:onClick="startGame"/>

            <View
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@android:color/darker_gray"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"/>

            <Button
                android:id="@+id/button$_change_team"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/click_to_change_team"
                android:textAlignment="center"
                android:onClick="changeTeam"/>

            <Button
                android:id="@+id/button$_change_players"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/click_to_change_player"
                android:textAlignment="center"
                android:onClick="changePlayer"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>