<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="1"
    android:background="#474AA8"
    tools:context="com.projectgroup.taboo.MainActivity">


    <Button
        android:id="@+id/settingsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:padding="20dp"
        android:text="SETTINGS"
        android:onClick="SettingsActivity"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        android:elevation="0dp"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="25"
        android:background="@drawable/buttonshape"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/startButton"
        android:layout_alignStart="@+id/startButton" />

    <Button
        android:id="@+id/aboutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:padding="20dp"
        android:text="ABOUT"
        android:onClick="AboutActivity"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        android:elevation="0dp"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="15"
        android:background="@drawable/buttonshape"
        android:layout_below="@+id/settingsButton"
        android:layout_alignLeft="@+id/settingsButton"
        android:layout_alignStart="@+id/settingsButton" />

    <Button
        android:id="@+id/startButton"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        android:elevation="0dp"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="20"
        android:linksClickable="false"
        android:background="@drawable/buttonshape"
        android:onClick="TeamNamesActivity"
        android:padding="20dp"
        android:text="START GAME"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_above="@+id/settingsButton"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
