<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_start_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.projectgroup.taboo.StartGameActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/blue_team_points"
                style="@style/TeamNamesActivity_text_team_names"
                android:background="@color/TeamNamesActivity_blue_team_background"
                android:hint="@string/blue_team" />

            <TextView
                style="@style/TeamNamesActivity_text_team_names"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="5">

            <TextView
                android:id="@+id/red_team_points"
                style="@style/TeamNamesActivity_text_team_names"
                android:layout_weight="5"
                android:background="@color/TeamNamesActivity_blue_team_background"
                android:hint="@string/blue_team" />

            <TextView
                style="@style/TeamNamesActivity_text_team_names"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="10" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
