<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        style="@style/BeforeStart_mainLayout"
        >

        <LinearLayout
            style="@style/BeforeStart_teamLayouts"
            >

            <TextView
                style="@style/BeforeStart_textViews"
                />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_blue"
                style="@style/BeforeStart_recyclerView" />


        </LinearLayout>

        <LinearLayout
            style="@style/BeforeStart_teamLayouts"
            >

            <TextView
                style="@style/BeforeStart_textViews"
                />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_red"
                style="@style/BeforeStart_recyclerView" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/blue_team_players"
            android:textAlignment="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Pierwszy gracz" />

    </LinearLayout>

</LinearLayout>