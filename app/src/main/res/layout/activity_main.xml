<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundMainActivity"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="1"
    tools:context="com.projectgroup.taboo.MainActivity">

    <Button
        android:id="@+id/startButton"
        style="@style/MainActivityButton"
        android:layout_above="@+id/settingsButton"
        android:background="@drawable/buttonshape"
        android:onClick="TeamNamesActivity"
        android:text="START GAME" />

    <Button
        android:id="@+id/settingsButton"
        style="@style/MainActivityButton"
        android:layout_alignLeft="@+id/startButton"
        android:layout_alignStart="@+id/startButton"
        android:background="@drawable/buttonshape"
        android:onClick="SettingsActivity"
        android:text="SETTINGS" />

    <Button
        android:id="@+id/aboutButton"
        style="@style/MainActivityButton"
        android:layout_alignLeft="@+id/settingsButton"
        android:layout_alignStart="@+id/settingsButton"
        android:layout_below="@+id/settingsButton"
        android:background="@drawable/buttonshape"
        android:onClick="AboutActivity"
        android:text="ABOUT" />

</RelativeLayout>
