<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="edit_text_fields" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">#0b0b0b</item>
        <item name="android:typeface">monospace</item>
        <item name="android:background">#ECECEC</item>
        <item name="android:hint">@string/players_name</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="buttons" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">#CCCCCC</item>
        <item name="android:typeface">normal</item>
        <item name="android:background">#e6e6fa</item>
        <item name="android:text">Dodaj</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="text_team_names" parent="@android:style/TextAppearance.Medium">
        <item name="android:background">#777777</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="layouts" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>