<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="edit_text_fields" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/edit_text_and_buttons</item>
        <item name="android:textColor">#0b0b0b</item>
        <item name="android:typeface">monospace</item>
        <item name="android:background">#ECECEC</item>
        <item name="android:hint">@string/players_name</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">@dimen/team_names_margins</item>
        <item name="android:padding">@dimen/field_for_names_padding</item>
    </style>
    <style name="buttons_to_add_more_players" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/edit_text_and_buttons</item>
        <item name="android:textColor">#CCCCCC</item>
        <item name="android:typeface">normal</item>
        <item name="android:background">#e6e6fa</item>
        <item name="android:text">Dodaj</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">@dimen/team_names_margins</item>
    </style>
    <style name="text_team_names" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">30dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginRight">@dimen/team_names_margins</item>
        <item name="android:layout_marginLeft">@dimen/team_names_margins</item>
    </style>
    <style name="layouts" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="buttons_to_go_further" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ee5422</item>
        <item name="android:typeface">normal</item>
        <item name="android:background">#aaaaaa</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">@dimen/team_names_margins</item>
        <item name="android:padding">@dimen/go_further_buttons_padding</item>
    </style>
</resources>